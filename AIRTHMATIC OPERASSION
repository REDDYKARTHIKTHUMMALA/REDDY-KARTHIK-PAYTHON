x=int(input("enter the number:"))
y=eval(input("enter the number:"))
print("addition of two numbers: ",x+y)
print("subtractioin of two numbers: ",x-y)
print("multiplication of two numbers: ",x*y)
print("division of two numbers: ",x/y)

p=float(input("enter amout borrowed: "))
t=float(input("enter the interest per day: "))
r=float(input("enter the days: "))
print("simple interest: ",p*t*r/100)
print("compound interest: ",p*(1+r)**t)

import math
l=eval(input("enter the length: "))
b=eval(input("enter the breadth: "))
r=eval(input("enter the radius: "))
s=eval(input("enter the side: "))
print("area of cicle: ",math.pi*r*r)
print("area of rectangle: ",l*b)
print("area of square: ",s*s)
print("perimeter of rectangle: ",2*(l+b))
print("perimeter of square: ",4*s)
print("circumstance of circle: ",2*math.pi*r)
